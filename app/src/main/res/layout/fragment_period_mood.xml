                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="2dp"/>
        <CheckBox
                android:text="Cramp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/checkboxFatigue"
                android:layout_width="133dp"
                android:layout_height="48dp"
                android:id="@+id/checkboxCramp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:onClick="onCheckboxSymptomClicked"
                android:layout_marginTop="24dp"
                android:layout_marginStart="4dp"/>
        <CheckBox
                android:text="Fatigue"
                app:layout_constraintLeft_toLeftOf="@+id/checkboxCramp"
                android:layout_width="133dp"
                android:layout_height="48dp"
                android:id="@+id/checkboxFatigue"
                app:layout_constraintStart_toStartOf="parent"
                android:onClick="onCheckboxSymptomClicked"
                app:layout_constraintEnd_toEndOf="@+id/checkboxInsomnia"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                android:layout_marginTop="48dp"/>
        <CheckBox
                android:text="Headache"
                android:layout_width="133dp"
                android:layout_height="48dp"
                android:id="@+id/checkboxHeadache"
                android:onClick="onCheckboxSymptomClicked"
                app:layout_constraintTop_toBottomOf="@+id/checkboxCramp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp"/>
        <CheckBox
                android:text="Pimples"
                android:layout_width="133dp"
                android:layout_height="48dp"
                android:id="@+id/checkBoxPimples"
                app:layout_constraintTop_toTopOf="parent"
                android:onClick="onCheckboxSymptomClicked"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <CheckBox
                android:text="Insomnia"
                android:layout_width="133dp"
                android:layout_height="48dp"
                android:id="@+id/checkboxInsomnia"
                android:onClick="onCheckboxSymptomClicked"
                app:layout_constraintLeft_toRightOf="@+id/checkboxFatigue"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/checkBoxPimples"/>

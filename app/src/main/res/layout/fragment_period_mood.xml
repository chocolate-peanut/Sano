                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/PeriodCheckboxNo"
                android:layout_marginStart="77dp"
                app:layout_constraintStart_toEndOf="@+id/PeriodCheckboxYes" android:layout_marginTop="35dp"
                app:layout_constraintTop_toBottomOf="@+id/checkboxNo"/>

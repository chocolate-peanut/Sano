                android:text="Bloating"
                android:layout_width="133dp"
                android:layout_height="48dp"
                android:id="@+id/checkboxBloating"
                android:layout_marginStart="2dp"
                android:onClick="onCheckboxSymptomClicked"
                app:layout_constraintStart_toEndOf="@+id/checkboxCramp" android:layout_marginBottom="1dp"
                app:layout_constraintBottom_toTopOf="@+id/checkboxFatigue" android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintEnd_toStartOf="@+id/checkBoxPimples" android:layout_marginEnd="7dp"/>
        <TextView
                android:text="Intercourse:"
                android:layout_width="116dp"
                android:onClick="onCheckboxSymptomClicked"
                android:layout_height="21dp" android:id="@+id/textView4"
                android:minHeight="48dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="2dp"
                android:layout_marginTop="13dp" app:layout_constraintTop_toBottomOf="@+id/checkboxHeadache"
                tools:ignore="TouchTargetSizeCheck"/>

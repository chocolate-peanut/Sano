                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/PeriodCheckboxYes"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"
                android:layout_marginTop="5dp" app:layout_constraintTop_toBottomOf="@+id/textView7"/>
        <CheckBox

                android:text="No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkboxNo"
                android:layout_marginStart="77dp" app:layout_constraintStart_toEndOf="@+id/checkboxYes"
                android:layout_marginTop="45dp" app:layout_constraintTop_toBottomOf="@+id/checkboxFatigue"/>
